<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phone.moran.activity.StartAnimActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/logo_LL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/start_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_iv"
                android:layout_width="280dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="180dp"
                android:background="@mipmap/logo_text" />

            <ImageView
                android:layout_width="210dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="23dp"
                android:background="@mipmap/start_text"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_marginBottom="23dp"
                android:background="@mipmap/start_name"
                android:scaleType="fitXY" />
        </LinearLayout>

        <ImageView
            android:id="@+id/start_anim"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/finish_btn"
            android:text="@string/skip"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@mipmap/start_skip_bg"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="72dp"
            android:layout_height="30dp" />
    </FrameLayout>



</android.support.constraint.ConstraintLayout>
