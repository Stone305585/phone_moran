<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/run_main_color"
    tools:context="com.phone.moran.activity.InputInfoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/run_main_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/bg_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/title_bar_common"/>

            <EditText
                android:id="@+id/msg_et"
                android:hint="@string/person_des"
                android:textSize="16sp"
                android:gravity="left|top"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/run_text_hint"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <Button
                android:id="@+id/submit_btn"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="right"
                android:background="@mipmap/login_btn_checked"
                android:layout_width="70dp"
                android:layout_height="33dp" />
        </LinearLayout>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
